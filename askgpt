#!/usr/bin/env python3
import uuid
import openai
import sys
import gpt_utils

gpt_utils.gpt_init()
gpt_utils.set_openai_api_key()

arg = " ".join(sys.argv[1:])

messages = [
    gpt_utils.create_openai_message(
        gpt_utils.gpt_system_role,
        "You are ChatGPT, a large language model trained by OpenAI. "
        "Answer as concisely as possible.",
    ),
    gpt_utils.create_openai_message(
        gpt_utils.gpt_user_role,
        f"Answer with only the actual code snippet without any intro "
        f"or explanation. "
        f"What is the safest python code to {arg}",
    ),
]

r = openai.ChatCompletion.create(
    model="gpt-3.5-turbo", temperature=0, messages=messages
)
text = r["choices"][0]["message"]["content"]
text = gpt_utils.extract_code_from_response(text)

code_uuid = str(uuid.uuid4())

gpt_utils.save_log("askgpt.log", arg, code_uuid, text)
gpt_utils.save_code("askgpt", code_uuid, text)

print(f"START_UUID:{code_uuid}:END_UUID")
print(text)
